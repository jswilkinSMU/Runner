			<AnimationGroup name="Jump" secondsPerFrame="0.75" playbackMode="Once">
				<Direction vector="-1,0,0">
					<Animation startFrame="6" endFrame="6"/>
				</Direction>
			</AnimationGroup>
		</Visuals>
	</PlayerDefinition>

